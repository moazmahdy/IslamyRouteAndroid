<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/bg3"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اسلامي"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <FrameLayout
        android:id="@+id/framentContinar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttomNavigathion"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttomNavigathion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/framentContinar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/buttomnavigathiondesign"
        android:background="@color/gold"
        app:itemIconTint="@color/buttom_navigathion_item_color"
        app:itemTextColor="@color/buttom_navigathion_item_color"
        />

</androidx.constraintlayout.widget.ConstraintLayout>