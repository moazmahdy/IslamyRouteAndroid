<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentQuran" >

    <ImageView
        android:id="@+id/quranIV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.25"
        android:adjustViewBounds="true"
        android:src="@drawable/quranimage"
        android:layout_marginTop="50sp"
        />
    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/quranIV"
        android:layout_marginTop="12dp"
        android:background="@color/gold"/>
    <TextView
        android:id="@+id/suraNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLine"
        android:text="اسم السورة"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>
    <View
        android:id="@+id/buttomLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/suraNameTV"
        android:layout_marginTop="12dp"
        android:background="@color/gold"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suraNameRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttomLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_sura_name"
        />


</androidx.constraintlayout.widget.ConstraintLayout>